<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="90">

            <FrameLayout
                android:id="@+id/addGroup"
                android:background="@drawable/layout_border"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/grp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Auction Group"
                    android:textColor="#b95e34"
                    android:layout_gravity="center_vertical|center"
                    android:textSize="20dp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/id_numberOfGroups"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 Groups added"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="18dp" />

            <FrameLayout
                android:id="@+id/addTime"
                android:background="@drawable/layout_border"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="80dp">

                <ImageView
                    android:elevation="1dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/clock"/>
                <TextView
                    android:elevation="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add group time"
                    android:textColor="#b95e34"
                    android:layout_gravity="center_vertical|center"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/id_auctionTime"
                    android:elevation="0dp"
                    android:background="@android:color/transparent"
                    android:prompt="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/id_auctionTimeText"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Choose an auction time"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/topbottom_style"
            android:layout_weight="10">

            <FrameLayout
                android:id="@+id/submitAuction"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_plus"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT AUCTION"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/button_text_large"
                        android:textStyle="bold"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>