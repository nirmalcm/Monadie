<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/bg_launch"
android:id="@+id/id_parentLaunchActivity">

<ImageView
    android:layout_marginTop="20dp"
    android:layout_gravity="top|center_horizontal"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/launch_logo"/>

<LinearLayout
    android:layout_marginBottom="20dp"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_gravity="top|center_horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        app:elevation="5dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
        </FrameLayout>

        <Button
            android:id="@+id/signUp"
            android:text="SIGN UP"
            android:textSize="@dimen/button_text_large"
            android:textColor="#fbfbfb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="20dp"
        android:id="@+id/id_sell"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:background="#f3f3f3"
        app:cardBackgroundColor="@android:color/transparent"
        app:elevation="5dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/launch_border_signin">
        </FrameLayout>

        <Button
            android:id="@+id/signIn"
            android:text="SIGN IN"
            android:textColor="#fbfbfb"
            android:textSize="@dimen/button_text_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="top|center_horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        app:elevation="5dp">

        <FrameLayout
            android:alpha="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">
        </FrameLayout>

        <TextView
            android:id="@+id/id_skip"
            android:text=">> SKIP "
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="@dimen/button_text_large"
            android:textStyle="bold|italic"
            android:textAllCaps="true"/>

    </android.support.v7.widget.CardView>
</LinearLayout>
</FrameLayout>